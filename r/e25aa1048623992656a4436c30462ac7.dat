/* EXPORT DATA */

.content.export{}
.content.export .box_table{margin-bottom:50px;overflow:hidden;}
.content.export .box_table:last-child{margin-bottom:0;}
.content.export table{position.relative;}
.content.export table tr:first-child{position:sticky;top:0;left:0;right:0;background:#fff;box-shadow:0px 2px 2px rgba(0,0,0,0.05);z-index:5;border-radius:5px 5px 0 0;}
.content.export table tr:nth-child(2n) td{background:transparent;}
.content.export table tr.empty td{padding:5px;}
.content.export .align_right{width:250px;}

.content.export .filter .select_box{position:relative;padding:1px;background-color:#fff;box-shadow:0px 2px 0px rgba(0,0,0,0.05);border-radius:3px;display:flex;align-items:center;}
.content.export .filter .select_box label{font-weight:700;font-size:16px;padding:3px;margin:0;padding:12px 0 12px 16px;white-space:nowrap;}
.content.export .filter .select_box select{margin:0;border:1px solid #fff;min-width:100px;width:160px;border:0;}
.content.export .filter .select_box select:focus{border:0;box-shadow:none;}
.page .content .title_row .title_right .select_box select{min-width:100px;}

.page .content .box_table .loader_frame_graph, .page .content .box_table .loader_frame_temp{opacity:0.9;}
.page .content .box_table .loader_frame_graph .loader, .page .content .box_table .loader_frame_temp .loader{border-width:2px;}

@media (max-width: 860px) {
	.content.export .align_right{width:auto;}
}
@media (max-width: 600px) {
	.content.export table tr td{font-weight:600;}
	.content.export table tr .rmv2{display:none;}
	.content.export table tr .shw2{display:block;}
	.content.export table tr .shw2 .row{width:100%;margin:10px 0 0 0;display:flex;align-items:center;justify-content:space-between;}
	.content.export table tr .shw2 span{font-weight:300;margin:0 auto 0 0;}
}