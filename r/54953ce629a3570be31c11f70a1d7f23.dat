    <script>
        languageTypeS=navigator.language.substr(0,2)+'-cn'
        allLanguage()
        function validate(event) {
            event.preventDefault();
            if (document.getElementById("email").value) {
                hcaptcha.execute();
            }
        }

        function onload() {
            var element = document.getElementById("button_new");
            element.onclick = validate;
        }

        $(function () {

            $('#register').click(function () {
                $('#login').addClass('blur');
                $('.popupbackground').fadeIn();
                $('.popup').show();
            });

            $('.close, .popupbackground').click(function () {
                $('#login').removeClass('blur');
                $('.popupbackground').fadeOut();
                $('.popup').hide();
            });

            $('.check').click(function () {
                $(this).toggleClass('selected');
            });

            $('#button_login').on('click', function () {
                if ($('#key').val() == '') {
                    return false;
                }
                if($('#key').val()!==$('#twoFa').val()){
                    $('#message_login').html('The two keys are inconsistent')
                    $('#message_login').show()
                    $('#message_login').css('color','#ff564f')
                    return
                }else {
                    $('#message_login').html('')
                    $('#message_login').hide()
                }
                $.ajax({
                    url:'/setpwd',
                    type:'post',
                    data:{
                        pwd:$('#key').val(),
                        pwd2:$('#twoFa').val()
                    },
                    success:function (res) {
                        if(Number(res)){
                            window.location.replace('/index')
                        }else {
                            $('#message_login').html('Setup failed,Delete the server password file and reset it again')
                            $('#message_login').show()
                            $('#message_login').css('color','#ff564f')
                        }
                    }
                })
            });

            $("#key,#twoFa").keyup(function (e) {
                if (e.which == 13) {
                    $('#button_login').click();
                }
            });
        });

        // function setCookie(key, value) {
