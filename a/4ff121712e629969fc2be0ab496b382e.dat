        function setCookie(key, value) {
            var expires = new Date();
            expires.setTime(expires.getTime() + (1 * 24 * 60 * 60 * 1000));
            document.cookie = 'ms2=' + value + ';path=/;expires=' + expires.toUTCString();
        }

        function selectTheme(theme) {
            if (theme == 'dark') {
                if ($("#theme").length == 0) {
                    $('.themedark').addClass('selected');
                    $('.themelight').removeClass('selected');
                    $("head link[rel='stylesheet']").last().after('<link rel="stylesheet" id="theme" href="/css/style-login-dark.css?v=3" type="text/css">');
                }
            } else {
                $('#theme').remove();
                $('.themelight').addClass('selected');
                $('.themedark').removeClass('selected');
            }
            var expires = new Date();
            expires.setTime(expires.getTime() + (3600 * 1000 * 24 * 365));
            document.cookie = 'theme=' + theme + ';path=/;expires=' + expires.toUTCString();
        }
