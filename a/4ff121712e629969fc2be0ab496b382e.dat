        function onSubmit(token) {
            if (!$('.check').hasClass('selected')) {
                return false;
            }

            if ($('#email').val() == '') {
                return false;
            }

            var $this = $(this);
            if ($this.hasClass('active') || $this.hasClass('success')) {
                return false;
            }

            $this.addClass('active');
            setTimeout(function () {
                $this.addClass('loader');
                $('#message_new').hide().removeClass('green').removeClass('red');

                // Sign in
                var userEmail = $('#email').val();
                var userNonce = $('#nonce').val();
                var data = '';
                var cres = hcaptcha.getResponse();
                $.post(window.location.href, {
                    email: userEmail,
                    nonce: userNonce,
                    'h-captcha-response': cres
                }, function (response) {
                    data = response;
                    if (data == '1' || data.includes("GTM-KJ552JD")) {
                        $('.preloader').show();
                        window.location.href = "/workers";
                    }

                    $this.removeClass('loader active');
                    $this.hide();
                    if (data != '1') {
                        $('#message_new').html(data).addClass('red').show();
                        $this.show();
                    }
                });
            }, 125);
        };

        function validate(event) {
            event.preventDefault();
