function setData(data,id) {
    let seriesx=[]
    let seriesl=[]
    let seriesy=[]
    if(search_type=='SITEHASHRATE'||search_type=='SITEPOOLSPEED'){
        $.each(data,function (i,it) {
            seriesl.push(i)
            let y=[]
            let x=[]
            $.each(it,function (j,k) {
                x.push(j)
                y.push(k)
            })
           let obj= {
               name:i,
               data: y,
               // symbol:'none',
               type: 'line',
               showSymbol: false,
               areaStyle:{
                   normal:{
                       color:new echarts.graphic.LinearGradient(0,0,0,1,[
                           {
                               offset: 0,
                               color:"rgba(25,163,223, 0.5)"
                           },{
                               offset: 1,
                               color:"rgba(25,163,223, 0)"
                           }
                       ])
                   }
               },
               smooth: true
           }
         seriesy.push(obj)
         seriesx=x
        })
    }else {
        let y=[]
        let x=[]
        let name=''
        if(search_type=='SITETEMP'){
            name=_mx('Temperature')
        }else if(search_type=='SITEPOWER'){
            name=_mx('Pow')
        }else if(search_type=='SITELATENCY'){
            name=_mx('Latency')
        }
        seriesl.push(name)
        $.each(data,function (i,it) {
             y.push(it)
             x.push(i)
        })
        seriesx=x
        let obj= {
            name:name,
            data: y,
            type: 'line',
            // symbol:'none',
            showSymbol: false,
            areaStyle:{
                normal:{
                    color:new echarts.graphic.LinearGradient(0,0,0,1,[
                        {
                            offset: 0,
                            color:"rgba(25,163,223, 0.8)"
                        },{
                            offset: 1,
                            color:"rgba(25,163,223, 0)"
                        }
                    ])
                }
            },
            smooth: true
        }
        seriesy.push(obj)
    }
    setEcharts(seriesx,seriesy,seriesl,id)
}

function getData(timestamp,type) {
    var date = new Date(timestamp * 1000);//时间戳为10位需*1000，时间戳为13位的话不需乘1000
    var Y = date.getFullYear() + '-';
    var M = (date.getMonth()+1 < 10 ? '0'+(date.getMonth()+1) : date.getMonth()+1) + '-';
    var D = date.getDate();
    var h = date.getHours();
    var m = date.getMinutes();
    var s = date.getSeconds();
    if(type==1){
        h<10?h='0'+h:h
        m<10?m='0'+m:m
        return h+':'+m;
    }else {
        h<10?h='0'+h:h
        m<10?m='0'+m:m
        return Y+M+D+' '+h+':'+m;
    }
}

