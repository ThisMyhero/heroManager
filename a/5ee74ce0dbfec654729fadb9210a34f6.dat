$('#devfee_num').on('change',function () {
    if($(this).val()==''){
        $(this).val('')
        return
    }
    let x=Number($(this).val())
    if(isNaN(x)){
        $(this).val(0.00)
    }else if(x<0){
        $(this).val(0.00)
    }else if(x>4){
        $(this).val(4.00)
    }
    else if(0<x<=4){
        $(this).val(x.toFixed(2))
    }
})

